@model AddProductViewModel
@{
	var cats = ViewData["Categories"] as List<GetCategoryViewModel>;
}
<div>
	<form asp-controller="Shop" asp-action="AddProduct">
		<label>Name</label>
		<input type="text" name="Name" />
		<label>Description</label>
		<input type="text" name="Description" />
		<label>Price</label>
		<input type="number" name="Price" />
		<select asp-for="CategoryId" asp-items="@(new SelectList(cats, "Id", "Name"))">
			<option value="">-- Select Category --</option>
		</select>
		<button type="submit" asp-action="AddProduct">Add Product</button>
	</form>
</div>